# Production Environment Variables
# Copy this file to .env.prod and fill in your production values

# Database Configuration
DATABASE_NAME=pandoragym_db
DATABASE_USER=pandoragym
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_PORT=5432

# Application Configuration
APP_PORT=3333
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-min-32-chars

# Supabase Configuration (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis Configuration (optional)
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# SSL Configuration (if using nginx with SSL)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Security
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
